<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfirmacaoPagamento">

    <!-- Botão Voltar (ícone) -->
    <ImageView
        android:id="@+id/btnVoltar"
        android:layout_width="37dp"
        android:layout_height="41dp"
        android:contentDescription="Voltar"
        android:src="@drawable/voltar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintVertical_bias="0.05"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp" />

    <!-- Título "Pagamento efetuado com sucesso" -->
    <TextView
        android:id="@+id/txtConfirmacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semibold"
        android:text="Pagamento efetuado com sucesso"
        android:textColor="@color/preto"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnVoltar"
        app:layout_constraintVertical_bias="0.1"
        android:layout_marginTop="32dp" />

    <!-- Imagem de confirmação -->

    <!-- Botão "Voltar para o início" -->
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="144dp"
        android:contentDescription="Imagem de confirmação de pagamento"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtConfirmacao"
        app:srcCompat="@drawable/confirmacaopagamento" />

    <androidx.cardview.widget.CardView
        android:id="@+id/BtnVoltarInicio"
        android:layout_width="306dp"
        android:layout_height="54dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:cardBackgroundColor="@color/azul2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="32dp">

        <Button
            android:id="@+id/btnVoltarInicio"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@android:color/transparent"
            android:text="Voltar para o início"
            android:textColor="@color/branco"
            android:textSize="15sp"
            android:fontFamily="@font/poppins_semibold"
            android:stateListAnimator="@null" />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>